<!DOCTYPE html>
<html>
<head>
    <title>The World - @ViewBag.Title </title>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>

    <div id="sidebar">
        <img class="headshot" src="~/img/user1.jpg" alt="headshot" />
        <span id="username">Sam Hastings</span>
        <ul class="menu">
            <li class="active"><a asp-controller="App" asp-action="Index">Home</a></li>
            <li><a asp-controller="App" asp-action="About">About</a></li>
            <li><a  asp-controller="App" asp-action="Contact">Contact</a></li>
        </ul>
    </div>
    <div id="wrapper">
        <div id="main">
            <div>
                <button id="sidebarToggle">Hide Sidebar</button>
            </div>
          @RenderBody();
        </div>
        <div id="footer">
            &copy; 2015 My ding dong inc
        </div>
    </div>
<script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
    @RenderSection("scripts", false);
    <script type="text/javascript" src="~/js/site.js"></script>



</body>
</html>